<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="projectparissud.multimodalhangman.StartActivity"
    android:id="@+id/start_screen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please choose your scenario:"
        android:id="@+id/scenario_option"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Handicap"
        android:id="@+id/handicap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/handicap_spinner"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Environment"
        android:id="@+id/environment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/environment_spinner"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:id="@+id/start_game_button"
        android:onClick="onClick"
        android:layout_gravity="center_horizontal"
        android:background="@color/accent_material_light"
        android:clickable="true"
        android:textColor="#ffffff"
        android:layout_marginTop="12dp"
        android:padding="15dp" />

</LinearLayout>
